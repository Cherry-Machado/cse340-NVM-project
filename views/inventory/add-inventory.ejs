<h1><%- title %></h1>
<%- messages() %>
        <% if (locals.errors) { %>
                <ul class="notice">
                        <% locals.errors.array().forEach(error=> { %>
                                <li>
                                        <%- error.msg %>
                                </li>
                                <% }) %>
                </ul>
                <% } %>

                        <form id="addinventoryForm" class="addinventoryForm-control" action="/inv/add-inventory"
                                method="post">
                                <p>All fields are required.</p>
                                <fieldset class="addinventoryFieldset">
                                        <label>Make<input type="text" value="<%- locals.inv_make %>"
                                                        placeholder="Toyota" name="inv_make" minlength="2"
                                                        maxlength="50" autofocus required></label>
                                        <label>Model<input type="text" value="<%- locals.inv_model %>"
                                                        placeholder="Runner" name="inv_model" minlength="2"
                                                        maxlength="50" required></label>
                                        <label>Year<input type="number" value="<%- locals.inv_year %>"
                                                        placeholder="2001" name="inv_year" min="1900" max="2030"
                                                        required></label>
                                        <label>Description
                                                <textarea placeholder="Introduce a description max 100 characters."
                                                        name="inv_description" minlength="2" maxlength="100" rows="5"
                                                        cols="50" required><%- locals.inv_description %></textarea>
                                        </label>
                                        <label>Image<input type="text" value="/images/vehicles/no-image.png"
                                                        placeholder="red_mustang.jpg" name="inv_image" required></label>
                                        <label>Thumbnail<input type="text" value="/images/vehicles/no-image-tn.png"
                                                        placeholder="litle_red_mustang.jpg" name="inv_thumbnail"
                                                        required></label>
                                        <label>Price<input type="number" value="<%- locals.inv_price %>"
                                                        placeholder="45000" name="inv_price" min="0" required></label>
                                        <label>Miles<input type="number" value="<%- locals.inv_miles %>"
                                                        placeholder="70000" name="inv_miles" min="0" required></label>
                                        <label>Color<input type="text" value="<%- locals.inv_color %>"
                                                        placeholder="Blue" name="inv_color" required></label>
                                        <label>Classification <%- classifications %></label>
                                        <button type="submit">Add Inventory</button>
                                </fieldset>
                        </form>