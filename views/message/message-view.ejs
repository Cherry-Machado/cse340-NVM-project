<div class="message-container">
  <%- messages() %>

  <div class="message-view">
    <div class="message-header">
        <h2><%- message.message_subject %></h2>
        <div class="message-meta">
            <p><strong>From:</strong> <%- message.account_firstname %> <%- message.account_lastname %></p>
            <p><strong>To:</strong> You</p>
            <p><strong>Date:</strong> <%- new Date(message.message_created).toLocaleString() %></p>
        </div>
    </div>
    <div class="message-body">
        <%- message.message_body %>
    </div>
  </div>

  <div class="message-actions">
      <a href="/message<% if (message.message_archived) { %>/archive<% } else { %>/<% } %>" class="message-btn">&larr; Back</a>
      <a href="/message/compose/<%- message.message_id %>" class="message-btn">Reply</a>
      <form id="archiveForm" action="/message/view/<%- message.message_id %>/toggle-archived" method="post" style="display: inline;">
          <button type="submit" class="message-btn">
              <%- message.message_archived ? "Unarchive" : "Archive" %>
          </button>
      </form>
      <a href="/message/view/<%- message.message_id %>/delete" class="message-btn message-btn-danger">Delete</a>
  </div>
</div>

<script src="/js/message-actions.js"></script>