<div class="message-container delete-confirmation">
  <h2><%- title %></h2>

  <%- messages() %>
  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <p>This action is permanent. Are you sure you want to delete this message?</p>
  
  <div class="message-preview">
    <p><strong>Subject:</strong> <%- message.message_subject %></p>
    <p><strong>From:</strong> <%- message.account_firstname %> <%- message.account_lastname %></p>
  </div>

  <form action="/message/delete" method="post">
    <input type="hidden" name="message_id" value="<%- message.message_id %>">
    <div class="message-actions">
      <button type="submit" class="message-btn message-btn-danger">Yes, Delete</button>
      <a href="/message/view/<%- message.message_id %>" class="message-btn">Cancel</a>
    </div>
  </form>
</div>